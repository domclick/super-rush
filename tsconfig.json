{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "ESNext"
    ],
    "outDir": "dist/",
    "declarationDir": "dist/types",
    "typeRoots": [
      "types/",
      "node_modules/@types/"
    ]
  },
  "include": [
    "src/"
  ]
}
